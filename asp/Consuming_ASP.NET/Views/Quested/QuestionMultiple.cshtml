@model Consuming_ASP.NET.Models.Questions



<div class="question_container">
    <div class="Row">


        <div class="info"></div>


        <div class="Column time">

            <p id="secs" style="margin: auto; text-align: center;">
                <script>
                    
                var timeleft = 31000;
                // Run myfunc every second
                var myfunc = setInterval(function () {

                    var now = new Date().getTime();
                    timeleft -= 1000;

                    // Calculating the seconds left
                    var seconds = Math.floor((timeleft % (1000 * 60)) / 1000);

                    // Result is output to the specific element
                    document.getElementById("secs").innerHTML = seconds

                    // Display the message when countdown is over
                    if (timeleft < 0) {
                        clearInterval(myfunc);
                        var url = $("#RedirectTo").val();
                        location.href = url;
                        document.getElementById("secs").innerHTML = "Time out!";
                    }
                }, 1000);</script>
            </p>
        </div>


        <div class="Column points">@Session["actualScore"]</div>
        @{
            string ans1 = Model.correct_answer;
            string ans2 = Model.incorrect_answers[0];
            string ans3 = Model.incorrect_answers[1];
            string ans4 = Model.incorrect_answers[2];

            string[] answers = { ans1, ans2, ans3, ans4 };

            var random = new Random();
            var n = 3;
            int randomnumber = random.Next(0, n);

            for (int i = 0; i < 4; i++)
            {
                int randomIndexToSwap = random.Next(n);
                string temp = answers[randomIndexToSwap];
                answers[randomIndexToSwap] = answers[i];
                answers[i] = temp;
            }

            int score_sum = 0;
            if (Model.difficulty == "easy")
            {
                score_sum = 1;
            }
            else if (Model.difficulty == "medium")
            {
                score_sum = 3;
            }
            else if (Model.difficulty == "hard")
            {
                score_sum = 5;
            }
        }
    </div>
    @Html.Hidden("RedirectTo", @Url.Action("Checked", "Quested", new { erantzuna = "$NOT_THE_SOLUTION$", question_id = Model.question_id, score = 0 }));
    <div>
        <div class="question">@Html.DisplayFor(model => model.question)</div>
    </div>
    <div>
        <div class="question_row">
            <a href="@Url.Action("Checked", "Quested", new { erantzuna = answers[0], question_id = Model.question_id, score = score_sum})"><div class="btn answer">@answers[0]</div></a>
            <a href="@Url.Action("Checked", "Quested", new { erantzuna = answers[1], question_id = Model.question_id, score = score_sum})"><div class="btn answer">@answers[1]</div></a>
        </div>
        <div class="question_row">
            <a href="@Url.Action("Checked", "Quested", new { erantzuna = answers[2], question_id = Model.question_id, score = score_sum})"><div class="btn answer">@answers[2]</div></a>
            <a href="@Url.Action("Checked", "Quested", new { erantzuna = answers[3], question_id = Model.question_id, score = score_sum})"><div class="btn answer">@answers[3]</div></a>
        </div>
    </div>
</div>
