@model Consuming_ASP.NET.Models.User

@{
    ViewBag.Title = "Register";
}

@using (Html.BeginForm("Register", "Quested"))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal zootopia" style="margin-top: 10%; font-size:20px;">
    <h4 style="text-align: center; color:white">Create User</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <p class="control-label col-md-6">Name</p>
        <div class="col-md-6">
            @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <p class="control-label col-md-6">Surname</p>
        <div class="col-md-6">
            @Html.EditorFor(model => model.surname, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.surname, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <p class="control-label col-md-6">Nickname</p>
        <div class="col-md-6">
            @Html.EditorFor(model => model.nickname, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.nickname, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <p class="control-label col-md-6">Password</p>
        <div class="col-md-6">
            @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control", @type = "password" } })
            @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <p class="control-label col-md-6">Email</p>
        <div class="col-md-6">
            @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-6 col-md-6">
            <input type="submit" value="Register" class="btn btn-default" style="color:black; border-color:black" />
        </div>
    </div>
</div>
}
